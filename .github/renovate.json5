{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
  ],
  packageRules: [
    {
      matchCategories: ["ci"],
      addLabels: ["ci"],
    },
    {
      matchManagers: ["pre-commit"],
      addLabels: ["pre-commit"],
      automerge: true,
    },
    {
      "matchDepTypes": ["action"],
      "matchPackageNames": ["conjikidow/bump-version{/,}**"],
      "pinDigests": false
    }
  ],
  "pre-commit": {
    enabled: true,
  },
  labels: [
    "automated",
    "dependencies",
  ],
}
